<h1><%= @author.name %></h1>
<p><%= @author.last_name %></p>
<p><%= @author.body %></p>
<p><%= @author.age %></p>
<p><%= @author.email %></p>
<p><%= @author.country %></p>
<p>Birthday date: <%= @author.date.strftime("%d/%m/%Y") if @author.date.present? %></p>



<ul>
  <li><%= link_to "Edit", edit_category_author_path(@category, @author) %></li>
  <li><%= link_to "Destroy", category_author_path(@category, @author), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %>
                  <%= button_to "Destroy", category_author_path(@category, @author), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-danger" %>
                  </li>
</ul>


 