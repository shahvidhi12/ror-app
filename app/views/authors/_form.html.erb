<%= form_with model: author do |form| %>
    <div>
      <%= form.label :name %><br>
      <%= form.text_field :name %>
      <% author.errors.full_messages_for(:name).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  
    <div>
      <%= form.label :body %><br>
      <%= form.text_area :body %><br>
      <% author.errors.full_messages_for(:body).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div>
      <%= form.label :date %><br>
      <%= form.date_field :date %><br>
      <% author.errors.full_messages_for(:date).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  
    <div>
      <%= form.submit %>
    </div>
  <% end %>
  